          <div class="d-flex flex-column">
            <label for="people">People</label>
            <input type="number" value="1" min="1" max="4" id="people">
          </div>
          <div class="d-flex flex-column">
            <label for="room">Room type</label>
            <input list="rooms" name="room" id="room">
