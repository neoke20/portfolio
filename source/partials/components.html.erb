    <div class="booking-card d-flex justify-content-center">
      <div class="booking-details">
        <img id="logo" src="./assets/images/projects/RitzCarlton.svg.png" alt="Ritz" height="65" class="mb-3">
        <div class="d-flex justify-content-around crumbs">
          <p>Booking</p>
          <p>></p>
          <p class="grey">Details</p>
          <p>></p>
          <p class="grey">Payment confirmation</p>
        </div>
