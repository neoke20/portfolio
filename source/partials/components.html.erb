                    <label for="check-in">Check-in</label>
                    <input type="date" id="check-in">
                  </div>
                  <div class="d-flex flex-column">
                    <label for="check-out">Check-in</label>
                    <input type="date" id="check-out">
                  </div>
                </div>
                <div class="text-center">
                  <button class="my-5">Reserve</button>
                </div>
              </div>
              <div class="prop-photo" style="background-image: url(./assets/images/projects/ritzpatio.webp);">
                <div class="location d-flex justify-content-center">
                  <i class="fa-solid fa-location-dot"></i>
                  <div class="d-flex flex-column justify-content-center">
                    <p>RAS AL KHAIMAH</p>
                    <em>AL WADI DESERT</em>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%# MOVIE CARD COMPONENT %>
